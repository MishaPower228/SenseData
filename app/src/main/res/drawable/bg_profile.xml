<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/background_color"/>
            <corners android:radius="@dimen/dialog_radius"/>
        </shape>
    </item>
    <item
        android:bottom="@dimen/dialog_header_bottom_cut"
        android:gravity="top">
        <shape>
            <solid android:color="@color/main_color"/>
            <corners
                android:topLeftRadius="@dimen/dialog_radius"
                android:topRightRadius="@dimen/dialog_radius"/>
        </shape>
    </item>

</layer-list>
