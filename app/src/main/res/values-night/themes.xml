<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Обов'язково дублюємо ключові налаштування, щоб у Night не з'являвся темний фон -->
    <style name="Theme.SenseData" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="materialAlertDialogTheme">@style/Overlay.SenseData.AlertDialog</item>
        <item name="sliderStyle">@style/Widget.SenseData.Slider</item>
    </style>

    <style name="Overlay.SenseData.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="backgroundTint">@color/bg_weather_card</item>
        <item name="android:windowBackground">@color/bg_weather_card</item>
        <item name="colorSurface">@color/bg_weather_card</item>
        <item name="colorOnSurface">@color/weather_card_text</item>

        <item name="backgroundInsetStart">0dp</item>
        <item name="backgroundInsetEnd">0dp</item>
        <item name="backgroundInsetTop">0dp</item>
        <item name="backgroundInsetBottom">0dp</item>

        <item name="shapeAppearanceMediumComponent">@style/Shape.SenseData</item>

        <item name="buttonBarPositiveButtonStyle">@style/Widget.SenseData.Dialog.Filled</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.SenseData.Dialog.Filled</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.SenseData.Dialog.Filled</item>
    </style>

    <style name="Widget.SenseData.Dialog.Filled" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/main_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">44dp</item>
    </style>

    <style name="Widget.SenseData.Slider" parent="Widget.Material3.Slider">
        <item name="thumbColor">@color/main_color</item>
        <item name="haloColor">@color/main_color</item>
        <item name="trackColorActive">@color/main_color</item>
        <item name="trackColorInactive">@color/main_color</item>
        <item name="tickVisible">false</item>
        <item name="trackHeight">6dp</item>
        <item name="thumbRadius">12dp</item>
    </style>

    <style name="Shape.SenseData">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

</resources>
