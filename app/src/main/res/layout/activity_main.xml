<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <!-- 🔹 Прокручуваний контент -->
    <ScrollView
        android:id="@+id/mainScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 🔹 Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/custom_toolbar"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/rounded_toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="username house"
                        android:textColor="@color/weather_card_text"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/user_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_user"
                        android:contentDescription="User icon" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

            <!-- 🔹 Заголовок над погодою -->
            <TextView
                android:id="@+id/labelWeather"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:text="Погода довкола"
                android:textColor="@color/weather_card_text"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/custom_toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 🔹 Карточка погоди -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/weather_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_chip_rounded"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/labelWeather"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/textWeatherCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_weather_label"
                    android:text="Місто: ..."
                    android:textColor="@color/weather_card_text"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageWeatherIcon"
                    android:layout_width="109dp"
                    android:layout_height="105dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:contentDescription="Іконка погоди"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textWeatherCity" />

                <TextView
                    android:id="@+id/textWeatherTemp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_weather_label"
                    android:text="🌡 Температура: ..."
                    android:textColor="@color/weather_card_text"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@id/imageWeatherIcon"
                    app:layout_constraintTop_toBottomOf="@id/textWeatherCity" />

                <TextView
                    android:id="@+id/textWeatherHumidity"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_weather_label"
                    android:text="💧 Вологість: ..."
                    android:textColor="@color/weather_card_text"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@id/textWeatherTemp"
                    app:layout_constraintTop_toBottomOf="@id/textWeatherTemp" />

                <TextView
                    android:id="@+id/textWeatherPressure"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_weather_label"
                    android:text="🧭 Тиск: ..."
                    android:textColor="@color/weather_card_text"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@id/textWeatherTemp"
                    app:layout_constraintTop_toBottomOf="@id/textWeatherHumidity" />

                <TextView
                    android:id="@+id/textWeatherMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_weather_label"
                    android:text="Погода: ..."
                    android:textColor="@color/weather_card_text"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textWeatherPressure" />

                <TextView
                    android:id="@+id/textWeatherDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_weather_label"
                    android:text="Опис: ..."
                    android:textColor="@color/weather_card_text"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textWeatherMain" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 🔹 Заголовок над списком кімнат -->
            <TextView
                android:id="@+id/labelRooms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                android:text="Мої кімнати"
                android:textColor="@color/weather_card_text"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/weather_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 🔹 Горизонтальний RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/room_recycler_view"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelRooms"
                tools:listitem="@layout/item_room_chip" />

            <!-- 🔹 Графіки -->
            <TextView
                android:id="@+id/labelCharts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="Графіки змін"
                android:textColor="@color/weather_card_text"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/room_recycler_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- 🔹 Кнопки періоду -->
            <LinearLayout
                android:id="@+id/chartPeriodButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/labelCharts"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDay"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="За день"
                    android:textAllCaps="false"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnWeek"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="За 7 днів"
                    android:textAllCaps="false"
                    app:cornerRadius="16dp"/>
            </LinearLayout>

            <!-- 🔹 Чіпи кімнат -->
            <HorizontalScrollView
                android:id="@+id/chartRoomChipsWrapper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:overScrollMode="never"
                android:fillViewport="true"
                app:layout_constraintTop_toBottomOf="@id/chartPeriodButtons"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupRooms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:singleLine="true"
                    app:singleSelection="true"
                    app:selectionRequired="true"/>
            </HorizontalScrollView>

            <!-- 🔹 Графік -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_margin="12dp"
                android:background="@drawable/bg_chip_rounded"
                app:layout_constraintTop_toBottomOf="@id/chartRoomChipsWrapper"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- 🔹 Кнопки температура/вологість -->
            <LinearLayout
                android:id="@+id/chartTypeButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/chart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTemperature"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Температура"
                    android:layout_marginEnd="8dp"
                    android:textAllCaps="false"
                    android:textColor="@color/weather_card_text"
                    app:cornerRadius="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHumidity"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вологість"
                    android:textAllCaps="false"
                    android:textColor="@color/weather_card_text"
                    app:cornerRadius="16dp"/>
            </LinearLayout>

            <!-- 🔹 Header Image -->
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_chip_rounded"
                android:orientation="vertical"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/chartTypeButtons"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/headerImage"
                    android:layout_width="wrap_content"
                    android:layout_height="95dp"
                    android:contentDescription="@string/room_image_desc"
                    android:scaleType="centerCrop"
                    android:src="@drawable/forest"
                    app:shapeAppearanceOverlay="@style/RoundedImageView" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- 🔹 FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        android:contentDescription="@string/add_room"
        app:backgroundTint="@color/main_color"
        app:borderWidth="15dp"
        app:maxImageSize="45dp"
        app:tint="@color/bg_weather_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
