<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/login_root"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/loginCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/bg_chip_rounded"
                android:elevation="8dp"
                android:layout_margin="16dp"
                android:gravity="center_horizontal"
                app:layout_constraintWidth_percent="0.92"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_user"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="@string/cd_app_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_title"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/weather_card_text"
                    android:layout_marginBottom="18dp" />

                <EditText
                    android:id="@+id/editTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/login_username_hint"
                    android:textColorHint="@color/weather_card_text"
                    android:textColor="@color/weather_card_text"
                    android:inputType="textPersonName|textNoSuggestions"
                    android:autofillHints="username"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="yes"
                    android:background="@drawable/bg_edittext"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/login_password_hint"
                    android:textColorHint="@color/weather_card_text"
                    android:textColor="@color/weather_card_text"
                    android:inputType="textPassword"
                    android:autofillHints="password"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="yes"
                    android:background="@drawable/bg_edittext"
                    android:padding="12dp"
                    android:layout_marginBottom="18dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_action"
                    android:textAllCaps="false"
                    android:textColor="@color/bg_weather_card"
                    app:backgroundTint="@color/main_color" />

                <TextView
                    android:id="@+id/textRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_account_register"
                    android:textColor="@color/main_color"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
