<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- “картка” діалога -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardWifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chip_rounded"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleWifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wifi_setup_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/weather_card_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etSsid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/wifi_ssid_hint"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:autofillHints="username"
            android:importantForAutofill="yes"
            android:imeOptions="actionNext"
            android:background="@drawable/bg_weather_label"
            android:textColor="@color/weather_card_text"
            android:textColorHint="@color/weather_card_text"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/titleWifi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/etPass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/wifi_password_hint"
            android:inputType="textPassword"
            android:maxLines="1"
            android:autofillHints="password"
            android:importantForAutofill="yes"
            android:imeOptions="actionDone"
            android:background="@drawable/bg_weather_label"
            android:textColor="@color/weather_card_text"
            android:textColorHint="@color/weather_card_text"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/etSsid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvWifiStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_weather_label"
            android:textColor="@color/weather_card_text"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/etPass"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/progressWifi"
            app:layout_constraintHorizontal_weight="1"/>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressWifi"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            app:indicatorSize="24dp"
            app:trackThickness="3dp"
            app:layout_constraintTop_toTopOf="@id/tvWifiStatus"
            app:layout_constraintBottom_toBottomOf="@id/tvWifiStatus"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Кнопки -->
        <LinearLayout
            android:id="@+id/btnBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvWifiStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.SenseData.Dialog.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSend"
                style="@style/Widget.SenseData.Dialog.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/send"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
