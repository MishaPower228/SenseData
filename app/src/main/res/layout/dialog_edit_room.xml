<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- “картка” діалога -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_chip_rounded"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_room_name_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/weather_card_text" />

        <EditText
            android:id="@+id/etRoomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/room_name_hint"
            android:inputType="textCapWords"
            android:autofillHints="name"
            android:background="@drawable/bg_weather_label"
            android:textColor="@color/weather_card_text"
            android:textColorHint="@color/weather_card_text"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/labelPickImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_new_image"
            android:textColor="@color/weather_card_text"
            android:padding="12dp"
            android:layout_marginTop="16dp" />

        <!-- Сітка зображень -->
        <GridLayout
            android:id="@+id/imageSelectionGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true"
            android:gravity="center_horizontal">

            <FrameLayout
                android:id="@+id/container1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/bg_image_selector">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/livingroom"
                    android:background="@drawable/bg_rounded_image"
                    android:clipToOutline="true"
                    tools:targetApi="31"
                    android:contentDescription="@string/living_room"
                    android:tag="livingroom" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/container2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/bg_image_selector">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kitchen"
                    android:background="@drawable/bg_rounded_image"
                    android:clipToOutline="true"
                    tools:targetApi="31"
                    android:contentDescription="@string/kitchen"
                    android:tag="kitchen" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/container3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/bg_image_selector">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/homeoffice"
                    android:background="@drawable/bg_rounded_image"
                    android:clipToOutline="true"
                    tools:targetApi="31"
                    android:contentDescription="@string/home_office"
                    android:tag="homeoffice" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/container4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/bg_image_selector">

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bathroom"
                    android:background="@drawable/bg_rounded_image"
                    android:clipToOutline="true"
                    tools:targetApi="31"
                    android:contentDescription="@string/bathroom"
                    android:tag="bathroom" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/container5"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/bg_image_selector">

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bedroom"
                    android:background="@drawable/bg_rounded_image"
                    android:clipToOutline="true"
                    tools:targetApi="31"
                    android:contentDescription="@string/bedroom"
                    android:tag="bedroom" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/container6"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/bg_image_selector">

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/balkon"
                    android:background="@drawable/bg_rounded_image"
                    android:clipToOutline="true"
                    tools:targetApi="31"
                    android:contentDescription="@string/balkon"
                    android:tag="balkon" />
            </FrameLayout>
        </GridLayout>

        <!-- КАСТОМНІ КНОПКИ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                style="@style/Widget.SenseData.Dialog.Filled"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:layout_marginStart="8dp"
                style="@style/Widget.SenseData.Dialog.Filled" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
