<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- “картка” діалога -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_chip_rounded"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нова назва кімнати"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/weather_card_text" />

        <EditText
            android:id="@+id/etRoomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Назва кімнати"
            android:inputType="textCapWords"
            android:background="@drawable/bg_weather_label"
            android:textColor="@color/weather_card_text"
            android:textColorHint="@color/weather_card_text"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/labelPickImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Оберіть нове зображення"
            android:textColor="@color/weather_card_text"
            android:layout_marginTop="16dp"/>

        <GridLayout
            android:id="@+id/gridImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:layout_marginTop="8dp">

            <!-- картка 1 -->
            <FrameLayout
                android:id="@+id/container1"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/bg_image_selector"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/livingroom"
                    android:background="@drawable/bg_rounded_image"
                    android:clipToOutline="true"
                    android:tag="livingroom"/>
            </FrameLayout>

            <!-- картка 2 -->
            <FrameLayout
                android:id="@+id/container2"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/bg_image_selector"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp">
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_rounded_image"
                    android:src="@drawable/kitchen"
                    android:clipToOutline="true"
                    android:tag="kitchen"/>
            </FrameLayout>

            <!-- картка 3 -->
            <FrameLayout
                android:id="@+id/container3"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/bg_image_selector"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp">
                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_rounded_image"
                    android:src="@drawable/living_room"
                    android:clipToOutline="true"
                    android:tag="living_room"/>
            </FrameLayout>

            <!-- картка 4 -->
            <FrameLayout
                android:id="@+id/container4"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/bg_image_selector"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp">
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_rounded_image"
                    android:src="@drawable/living_room_2"
                    android:clipToOutline="true"
                    android:tag="living_room_2"/>
            </FrameLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView>
