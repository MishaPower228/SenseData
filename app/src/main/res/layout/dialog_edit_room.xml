<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:padding="20dp">

        <EditText
            android:id="@+id/etRoomName"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Назва кімнати" android:inputType="textCapWords" />

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Оберіть зображення" android:layout_marginTop="12dp" />

        <GridLayout
            android:id="@+id/gridImages"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:columnCount="2" android:useDefaultMargins="true"
            android:layout_marginTop="8dp">

            <FrameLayout
                android:id="@+id/container1"
                android:layout_width="0dp" android:layout_height="140dp"
                android:layout_columnWeight="1" android:layout_gravity="fill"
                android:background="@drawable/bg_image_selector">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/livingroom"
                    android:tag="livingroom"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/container2"
                android:layout_width="0dp" android:layout_height="140dp"
                android:layout_columnWeight="1" android:layout_gravity="fill"
                android:background="@drawable/bg_image_selector">
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kitchen"
                    android:tag="kitchen"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/container3"
                android:layout_width="0dp" android:layout_height="140dp"
                android:layout_columnWeight="1" android:layout_gravity="fill"
                android:background="@drawable/bg_image_selector">
                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/living_room"
                    android:tag="living_room"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/container4"
                android:layout_width="0dp" android:layout_height="140dp"
                android:layout_columnWeight="1" android:layout_gravity="fill"
                android:background="@drawable/bg_image_selector">
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/living_room_2"
                    android:tag="living_room_2"/>
            </FrameLayout>
        </GridLayout>
    </LinearLayout>
</ScrollView>
